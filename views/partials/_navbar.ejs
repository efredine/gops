<nav class="navbar brown lighten-2">
  <p class="title">GOPS</p>

  
    <% if (!user) { %>
      <form method="POST" action="/api/users/login">
        <input name="username" type="text" placeholder="Username">
        <button class="btn waves-effect waves-light" type="submit" name="action">Sign In</button>
      </form>
    <% } %>

    <% if (user) { %>
        <p class="intro">Hello, <%= user.name %></p>
        <form method="POST" action="/api/users/logout">
          <button class="btn waves-effect waves-light" type="submit" name="action">Sign Out</button>
        </form>
    <% } %>

</nav>
